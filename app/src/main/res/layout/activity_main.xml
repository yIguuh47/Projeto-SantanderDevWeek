<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_card_conta"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"


                android:text="Santander"
                android:textColor="@color/redSecundary"

                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_santander"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="367dp"
        android:layout_height="192dp"
        app:srcCompat="@drawable/iv_santandersx_inicio"
        android:id="@+id/iv_sx"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mcv_card_conta"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_conheca_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_conheca_conta"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_sx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintVertical_bias="0.018" />

    <ImageView
        android:id="@+id/iv_saldo2"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_paid_black_24dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_conheca_conta"
        app:layout_constraintHorizontal_bias="0.057" />

    <TextView
        android:id="@+id/tv_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Santander Master"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_conheca_conta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_master_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenha 10 dias sem juros no  limite da conta"
        android:textColor="@color/gray"

        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_master"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintVertical_bias="0.0" />



    <ImageView
        android:id="@+id/iv_cartao"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_payment_black_24dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_master_desc"
        app:layout_constraintHorizontal_bias="0.057" />

    <TextView
        android:id="@+id/tv_cartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartão de crédito"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_master_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/tv_cartao_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fique livre de anuidade, ganhe pontos e muito mais"
        android:textColor="@color/gray"

        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cartao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_pix"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_pix_black_24dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cartao_desc"
        app:layout_constraintHorizontal_bias="0.057" />

    <TextView
        android:id="@+id/tv_pix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facilidade do Pix"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cartao_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_pix_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pague, receba e transfira em segundos"
        android:textColor="@color/gray"

        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btn_abrir_conta"
        android:layout_width="346dp"
        android:layout_height="56dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Abra sua conta online"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pix_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.53"
        app:layout_constraintHorizontal_bias="0.492" />

    <TextView
        android:id="@+id/tv_sou_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Já sou cliente"
        android:textStyle=""
        android:textColor="@color/redSecundary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_abrir_conta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.322" />



</androidx.constraintlayout.widget.ConstraintLayout>